         <script type="text/javascript">
			$(document).ready(function() {

				$('.fancybox').fancybox();

			});
		</script>
	<!-- -- End Light-box ---- -->
</head>
<body>
  <% if !flash[:notice].blank? %>
   		<p><%=flash[:notice]%></p>
	<%end%>
    
 <%= yield %>

 
