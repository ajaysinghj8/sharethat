	<%= javascript_include_tag "jquery-1.10.1.min.js", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "jquery.mousewheel-3.0.6.pack.js", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "jquery.fancybox.js", "data-turbolinks-track" => true %>
