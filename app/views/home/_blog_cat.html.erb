<div class="sidebar_top">
    <h3>Blog Categories</h3>
<div class="sidebar_top_list">
	 <ul> 
		<% if !@category.blank? %>
		<% for cat in @category %>
		        <li> <%= link_to '' do %>
		              <span class="category-name"><%=cat.name%></span> <span class="count">(<%=cat.count_value%>)</span><div class="clear"></div>
                      <%end%>
		        </li>
		  <% end %>
		<% else %>
		   <%= 'No Categories Defined Yet.'%>
		<% end %>
		
	</ul>
</div>
</div>
