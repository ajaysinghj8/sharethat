		<% if !@category.blank? %>
		<% for cat in @category %>
		        <li><a href="#"><span class="category-name"><%=cat.name%></span> <span class="count">(<%=cat.count_value%>)</span><div class="clear"></div></a></li>
		  <% end %>
		<% else %>
		  
		<% end %>
		
	</ul>
</div>
</div>
